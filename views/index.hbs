{{!-- table.table-primary.text-center.bg-light.mt-3.mb-3>tr*3>th*8 --}}

<header>
   
</header>

<table class="table table-primary text-center bg-light mt-3 mb-3 ">
   <tr>
      <th class="h1 text text-danger" colspan="7    ">Toys List </th>
      <th>
         <a class="btn btn-success" href="/add">Add</a>
         <a class="btn btn-danger" href="/drop"
         onclick="return confirm('Are you sure to delete all mobiles ?');"
         >Drop</a>
      </th>
   </tr>
   <tr class="cot">
      <th>Name</th>
      <th>Brand</th>
      <th>Origin</th>
      <th>Material</th>
      <th>Quantity</th>
      <th>Image</th>
      <th>Price</th>
      <th style="color:brown">Action</th>
   </tr>
   {{#each toys }}
   <tr>
      <th>{{ name }}</th>
      <th>{{ brand }}</th>
      <th>{{ origin }}</th>
      <th>{{ material}}</th>
      <th>{{ quantity}}</th>
      <th>
         <img class="zoom" src="{{ image }}" width="200" height="250">
      </th>
      <th>${{ price }}</th>
      <th>
         <a class="btn btn-warning" href="/edit/{{_id}}">Edit</a>
         <a class="btn btn-danger" href="/delete/{{_id}}" 
         onclick="return confirm('Are you sure to delete this toy ?');"
         >Delete</a>
      </th>
   </tr>
   {{/each}}
</table>